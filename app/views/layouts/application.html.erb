<!DOCTYPE html>
<html>
<head>
  <title>DangerOverflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <ul>
  <% if logged_in %>
    <li><%= link_to "Logout", {:controller => "sessions", :action => "destroy"}, :method => "delete" %></li>
    <li><%= link_to current_user.username, controller: 'questions', action: 'index' %></li>
  <% else %>
    <li><%= link_to "Login", controller: 'sessions', action: 'new' %></li>
    <li><%= link_to "Register", controller: 'users', action: 'new' %></li>
  <% end %>
  <li><%= link_to "Home", controller: 'questions', action: 'index' %></li>
    </ul>
  </nav>
<%= yield %>

</body>
</html>
